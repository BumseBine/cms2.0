<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
</head>
<body>
    <%- include('../partials/navigation') %>
    <div class="container">
        <% if (typeof schedulers !== 'undefined') { %> 
        <table class="table">
            <thead>
              <tr>
                    <th scope="col">#</th>
                    <th scope="col">Time</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Function</th>
                    <th scope="col">Args</th>
                    <th scope="col">Remove</th>
              </tr>
            </thead>
            <tbody>
                <% schedulers.forEach((scheduler, i) => { %>
                    <tr>
                        <th scope="row"><%- i%></th>
                        <td><%- scheduler.time%> </td>
                        <td><%- scheduler.name%> </td>
                        <td><%- scheduler.description%> </td>
                        <td><%- scheduler.func%> </td>
                        <td><%- scheduler.args%> </td>
                        <td><a class="text-danger" href="/remove"><i class="fas fa-minus-square"></i></a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %> 

            <h1 class="text-center">No tasks defined</h1>

        <% } %> 
    </div>
</body>
</html>